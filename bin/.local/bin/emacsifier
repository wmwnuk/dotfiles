#!/usr/bin/env bash

function run_main() {
    kitty -e emacsclient -t -a '' -s "$(whoami)" "$HOME"
}

selected_session=${1:-$(\ls "$HOME/.tmux/layouts" | cut -d'.' -f1 | wofi --dmenu)}

if [ -n "$selected_session" ]; then
    case $selected_session in
        main)
            run_main
            ;;
        *)
            session_dir=$(grep session_root "$HOME/.tmux/layouts/$selected_session.session.sh" | cut -d'"' -f2)
            if [ -d "$session_dir" ]; then
                kitty -e emacsclient -t -a '' -s "$selected_session" "$session_dir"
            else
                run_main
            fi
            ;;
    esac
fi
