#!/usr/bin/env sh

KITTY_PROFILE=$(printf " Root\n Archbox\n Tumbleweed" \
    | rofi -dmenu -p "" | cut -d " " -f2 | tr '[:upper:]' '[:lower:]')

if [ -n $KITTY_PROFILE ]; then
    case $KITTY_PROFILE in
        main|archbox)
            kitty -e distrobox-enter archbox
            ;;
        root)
            kitty -e zsh
            ;;
        *)
            kitty -e distrobox-enter "$KITTY_PROFILE"
            ;;
    esac
fi
